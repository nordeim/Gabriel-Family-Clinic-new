# üè• Gabriel Family Clinic - Docker Environment Configuration
# Production-ready environment variables for containerized deployment

# ========================================
# SUPABASE BACKEND CONFIGURATION
# ========================================
# Replace with your actual Supabase project credentials
NEXT_PUBLIC_SUPABASE_URL=https://qqtaqfqowpkqapgrljmb.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ========================================
# HEALTHCARE PLATFORM CONFIGURATION
# ========================================
# Enable CHAS (Community Health Assist Scheme) integration
NEXT_PUBLIC_CHAS_ENABLED=true

# Singapore timezone for healthcare appointments
NEXT_PUBLIC_SINGAPORE_TIMEZONE=Asia/Singapore

# Healthcare compliance standard (HIPAA for international)
NEXT_PUBLIC_HEALTHCARE_COMPLIANCE=HIPAA

# Application branding
NEXT_PUBLIC_APP_NAME=Gabriel Family Clinic
NEXT_PUBLIC_APP_DESCRIPTION=Healthcare Management Platform

# ========================================
# APPLICATION CONFIGURATION
# ========================================
# Production URL (replace with your domain)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node environment
NODE_ENV=production

# Next.js configuration
NEXT_TELEMETRY_DISABLED=1
PORT=3000

# ========================================
# FILE STORAGE CONFIGURATION
# ========================================
# Maximum file upload size (10MB)
MAX_FILE_SIZE=10485760

# Allowed file types for medical documents
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# File upload directory
UPLOAD_DIR=/app/public/uploads

# ========================================
# SECURITY & COMPLIANCE
# ========================================
# Enable security features for healthcare
ENABLE_SECURITY_HEADERS=true

# Session configuration
SESSION_SECRET=your_secure_session_secret_here

# JWT secret for authentication
JWT_SECRET=your_jwt_secret_here

# ========================================
# PERFORMANCE & MONITORING
# ========================================
# Enable performance monitoring
ENABLE_ANALYTICS=false

# Healthcare metrics collection
ENABLE_HEALTHCARE_METRICS=true

# ========================================
# EMAIL & NOTIFICATIONS
# ========================================
# Email service configuration
SMTP_HOST=your_smtp_host_here
SMTP_PORT=587
SMTP_USER=your_email_user_here
SMTP_PASS=your_email_password_here

# Healthcare notification templates
NOTIFICATION_FROM=noreply@gabrielfamilyclinic.sg

# ========================================
# CHAS INTEGRATION
# ========================================
# CHAS API endpoints (Singapore healthcare)
CHAS_API_URL=https://api.chas.sg
CHAS_API_KEY=your_chas_api_key_here

# ========================================
# PDPA COMPLIANCE (Personal Data Protection Act)
# ========================================
# Singapore PDPA compliance settings
ENABLE_PDPA_COMPLIANCE=true
DATA_RETENTION_DAYS=2555  # 7 years for medical records

# ========================================
# LOGGING & AUDIT
# ========================================
# Healthcare audit logging
ENABLE_AUDIT_LOGGING=true
LOG_LEVEL=info

# ========================================
# EXTERNAL API KEYS
# ========================================
# Google Maps for clinic locations
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# SMS notifications (if needed)
SMS_PROVIDER=twilio
SMS_API_KEY=your_sms_api_key_here
